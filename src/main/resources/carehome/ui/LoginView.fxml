<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:controller="carehome.ui.controller.LoginController"
           style="-fx-background-color:#ecf0f1;">

    <!-- Centered container -->
    <VBox spacing="12" alignment="CENTER" maxWidth="420">
        <Label text="RMIT Care Home â€” Login"
               style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill:#2c3e50;" />

        <!-- Card -->
        <VBox spacing="14" alignment="CENTER" style="-fx-background-color:white; -fx-padding:18; -fx-background-radius:12; -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.08), 16, 0.3, 0, 4);">
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="80"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Staff ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtId" promptText="e.g., M1 / D1 / N1" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <PasswordField fx:id="txtPassword" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </GridPane>

            <Button text="Login" fx:id="btnLogin"
                    style="-fx-background-color:#2ecc71; -fx-text-fill:white; -fx-font-weight:bold;"
                    maxWidth="Infinity"/>
            <Label fx:id="lblError" textFill="red"/>
        </VBox>
    </VBox>
</StackPane>
